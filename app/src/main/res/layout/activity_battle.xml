<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">


        <TextView
            android:id="@+id/titleBattle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BATTLE ARENA"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />


        <TextView
            android:id="@+id/battlePairNames"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lutemon 1     vs     Lutemon 2"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Left Lutemon -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="8dp">

                <FrameLayout
                    android:id="@+id/bgLutemon1"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/lutemon_frame_white"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/imageLutemon1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter"
                        android:contentDescription="Lutemon 1" />
                </FrameLayout>

                <TextView
                    android:id="@+id/nameLutemon1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lutemon 1"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp" />
                <TextView
                    android:id="@+id/hpLutemon1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HP: 20/20"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Right Lutemon -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginStart="8dp">

                <FrameLayout
                    android:id="@+id/bgLutemon2"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/lutemon_frame_white"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/imageLutemon2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter"
                        android:contentDescription="Lutemon 2" />
                </FrameLayout>

                <TextView
                    android:id="@+id/nameLutemon2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lutemon 2"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp" />
                <TextView
                    android:id="@+id/hpLutemon2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HP: 20/20"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/btnAttack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next attack"
                app:cornerRadius="0dp" />

            <Button
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Back"
                app:cornerRadius="0dp" />
        </LinearLayout>


        <TextView
            android:id="@+id/battleLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#DCDADA"
            android:padding="12dp"
            android:textColor="#333"
            android:textSize="16sp" />
    </LinearLayout>
</ScrollView>
